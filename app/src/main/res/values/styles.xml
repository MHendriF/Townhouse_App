<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.RoundedMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_roundedrectangle_green</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

</resources>
